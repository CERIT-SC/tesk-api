{
  "kind": "Job",
  "apiVersion": "batch/v1",
  "metadata": {
    "name": "taskmaster"
  },
  "spec": {
    "template": {
      "metadata": {
        "name": "taskmaster"
      },
      "spec": {
        "containers": [
          {
            "name": "taskmaster",
            "image": "eu.gcr.io/tes-wes/taskmaster:v0.0.5.2",
            "args": [
              "$(JSON_INPUT)"
            ],
            "ports": [
              {
                "containerPort": 8080
              }
            ],
            "env": [
              {
                "name": "KUBERNETES_RO_SERVICE_HOST",
                "value": "127.0.0.1"
              },
              {
                "name": "KUBERNETES_RO_SERVICE_PORT",
                "value": "8001"
              },
              {
                "name": "JSON_INPUT",
                "value": ""
              }
            ],
            "volumeMounts": [
              {
                "name": "test-volume",
                "mountPath": "/mount/test-volume"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "test-volume",
            "emptyDir": {}
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
